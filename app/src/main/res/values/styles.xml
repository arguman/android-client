<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/arguman_primary</item>
        <item name="colorAccent">@color/arguman_tint</item>
        <item name="colorPrimaryDark">@color/arguman_primary_dark</item>
    </style>

    <style name="AppTheme.ArgumanActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/AppTheme.ArgumantActionBar.TitleTextStyle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="AppTheme.ArgumantActionBar.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_title</item>
    </style>

    <style name="FabLabel">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/fab_label</item>
    </style>

</resources>
