<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/AppTheme.ArgumanActionBar</item>
    </style>

    <style name="AppTheme.ArgumanActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_background</item>
        <item name="android:titleTextStyle">@style/AppTheme.ArgumantActionBar.TitleTextStyle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="AppTheme.ArgumantActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_title</item>
    </style>

    <style name="FabLabel">
        <item name="android:textColor">#000000</item>
    </style>


</resources>
